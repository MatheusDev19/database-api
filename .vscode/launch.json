{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Node.js Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/ts-node-dev/lib/bin.js",
            "args": [
                "--inspect",
                "--respawn",
                "--transpile-only",
                "${workspaceFolder}/src/Tests/user-test/user.spec.ts"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "test"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "restart": true
        },
        {
            "name": "Debug Current Test File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/ts-node-dev/lib/bin.js",
            "args": [
                "--inspect",
                "--respawn",
                "--transpile-only",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "test"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "restart": true
        }
    ]
}
